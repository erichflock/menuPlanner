<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_dishes_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fleisch / Fisch"
        android:textSize="26dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_dishes_ingredients"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Kürbisnudeln mit Schwarzw. Schinken-Käse-Soße, frischem Porree, Petersilie"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView_dishes_option"
        android:layout_alignStart="@+id/textView_dishes_option"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/textView_dishes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3,60€"
        android:layout_below="@+id/textView_dishes_option"
        android:layout_toEndOf="@+id/textView_dishes_ingredients"
        android:layout_marginStart="56dp"
        android:textSize="20dp"
        />

</RelativeLayout>