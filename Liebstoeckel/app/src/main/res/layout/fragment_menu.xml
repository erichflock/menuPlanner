<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.tdsoftware.liebstoeckel.fragments.MenuFragment"
    android:id="@+id/fragment_menu"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/title_menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textView_menu_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_menu"
            android:layout_alignBottom="@+id/textView_menu"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:textSize="16dp"
            android:text="@string/week" />

        <ListView
            android:id="@+id/listView_menu_weekDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_menu"
            android:layout_marginTop="35dp" />

    </RelativeLayout>

</FrameLayout>
