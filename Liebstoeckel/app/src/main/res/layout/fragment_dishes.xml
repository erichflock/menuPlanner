<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.tdsoftware.liebstoeckel.fragments.DishesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_dishes_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/textView_dishes_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.10.17"
            android:textSize="28dp"
            android:layout_marginEnd="34dp"
            android:layout_alignBaseline="@+id/textView_dishes_weekday"
            android:layout_alignBottom="@+id/textView_dishes_weekday"
            android:layout_alignParentEnd="true" />

        <ListView
            android:id="@+id/listView_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_dishes_weekday"
            android:layout_marginTop="21dp" />

    </RelativeLayout>

</FrameLayout>
